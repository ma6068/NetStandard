@model IEnumerable<WebStandard.Models.Event>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Events</h2>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Event name
                    </th>
                    <th>
                        Starting date
                    </th>
                    <th>
                        Ending date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">
                            @Html.ActionLink(obj.Name, "EventData", new { id = obj.Id })
                        </td>
                        <td width="30%">@obj.StartDate.ToShortDateString()</td>
                        @if (obj.EndDate != null)
                        {
                            <td width="30%">@obj.EndDate.Value.ToShortDateString()</td>
                        }
                        else
                        {
                            <td width="30%"></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }

</div>